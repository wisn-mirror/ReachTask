<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tipimageview="http://schemas.android.com/apk/res-auto"  >
    <ImageView
        android:id="@+id/item_imageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/home_bottom_tab_icon_contact_highlight" />

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:textColor="#151414"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/item_imageview"
        android:layout_toRightOf="@+id/item_imageview"
        android:text="TextView" />
    <!--android:textStyle="bold"-->

    <com.wisn.mainmodule.widget.TipView
        android:id="@+id/item_tipview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_text"
        android:padding="0dp"
        tipimageview:isTip="false"
        tipimageview:tipBackground="#e82540"
        tipimageview:tipRedius="17dp"
        tipimageview:tipText="5"
        tipimageview:tipTextColor="#ffffff"
        tipimageview:tipTextRedius="9dp"
        tipimageview:tipTextSize="10dp" />

    <ImageView
        android:id="@+id/item_imageview_right"
        android:layout_width="14dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:scaleType="center"
        android:src="@drawable/table_arrow" />
    <View
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        />
</merge>