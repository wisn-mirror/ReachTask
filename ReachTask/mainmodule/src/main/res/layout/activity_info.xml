<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tipimageview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/info_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/home_bottom_tab_icon_contact_highlight" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|center"
            android:layout_marginLeft="15dp"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_tag_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:background="@android:color/white"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/info_nameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/white"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/info_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/white"
                    android:text="TextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/info_tip"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/info_seting_tag"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="设置标签"
        android:textSize="16sp"
        android:textColor="@color/text_black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:text="电话号码"
            />
        <TextView
            android:id="@+id/info_photo_number"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="45dp"
            android:gravity="left|center"
            android:text="15903832382"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:text="地区" />
        <TextView
            android:id="@+id/info_location"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="45dp"
            android:gravity="left|center"
            android:text="日本"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:text="个人相册" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="45dp"
            android:gravity="left|center"
            android:text=" "
            />
    </LinearLayout>
    <TextView
        android:id="@+id/info_more"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="left|center"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="更多"
        android:textSize="16sp"
        android:textColor="@color/text_black"/>

    <Button
        android:id="@+id/info_sendMessage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="发送消息" />


</LinearLayout>