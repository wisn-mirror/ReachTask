<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tipimageview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/contact_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/home_bottom_tab_icon_work_highlight"   />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:text="TextView" />

    <com.wisn.mainmodule.widget.TipView
        android:id="@+id/contact_tip"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="4dp"
        android:padding="0dp"
        tipimageview:isTip="false"
        tipimageview:tipBackground="#e82540"
        tipimageview:tipRedius="17dp"
        tipimageview:tipTextColor="#ffffff"
        tipimageview:tipTextRedius="10dp"
        tipimageview:tipTextSize="12sp" />
</LinearLayout>