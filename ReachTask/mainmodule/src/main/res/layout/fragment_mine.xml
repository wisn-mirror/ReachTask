<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/home_bottom_tab_icon_contact_highlight" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/contact_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tip"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_bottom_tab_icon_contact_highlight" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/home_bottom_tab_icon_contact_highlight" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#151414"
                android:text="TextView" />

            <com.wisn.mainmodule.widget.TipView
                android:id="@+id/contact_imageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="0dp"
                app:isTip="false"
                app:tipBackground="#e82540"
                app:tipRedius="17dp"
                app:tipText="5"
                app:tipTextColor="#ffffff"
                app:tipTextRedius="10dp"
                app:tipTextSize="12dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/home_bottom_tab_icon_contact_highlight" />
    </LinearLayout>
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="true"
        app:combinText="测试1"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="true"
        app:bottomLineVisable="true"
        app:combinTipText="2" />
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="true"
        app:combinText="测试1"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="false"
        app:combinTipText="2"/>
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="false"
        app:combinText="测试1"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="false"
        app:combinTipText="2"/>
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="true"
        app:combinText="测试1"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="true"
        app:bottomLineVisable="true" />
</LinearLayout>