<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/info_photo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:background="@android:color/white"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/info_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/white"
                    android:text="TextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/info_code"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="18dp"
                android:background="@drawable/code" />
        </LinearLayout>

    </LinearLayout>

    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:id="@+id/moment"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        app:leftDrawable="@drawable/moment"
        app:leftDrawableVisable="true"
        app:combinText="朋友圈"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="true" />
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:id="@+id/scan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="true"
        app:combinText="扫一扫"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="true" />
    <!--app:combinTipText="2"-->
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:id="@+id/mycollection"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        app:leftDrawable="@drawable/info_collection"
        app:leftDrawableVisable="true"
        app:combinText="收藏"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="false"  />
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:id="@+id/setting"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="true"
        app:combinText="设置"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="false" />

</LinearLayout>