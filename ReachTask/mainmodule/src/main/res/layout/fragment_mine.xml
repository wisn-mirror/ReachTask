<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/home_bottom_tab_icon_contact_highlight" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:background="@android:color/white"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/contact_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_gray"
                    android:background="@android:color/white"
                    android:text="TextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tip"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                android:background="@drawable/home_bottom_tab_icon_contact_highlight" />
        </LinearLayout>

    </LinearLayout>

    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="true"
        app:combinText="相册"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="true" />
    <!--app:combinTipText="2"-->
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="true"
        app:combinText="收藏"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="false"  />
    <com.wisn.mainmodule.widget.CombinationListItemLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        app:leftDrawable="@drawable/home_bottom_tab_icon_contact_highlight"
        app:leftDrawableVisable="true"
        app:combinText="设置"
        app:rightDrawable="@drawable/table_arrow"
        app:rightDrawableVisable="false"
        app:bottomLineVisable="false" />

</LinearLayout>